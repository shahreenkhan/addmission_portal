  <!-- modal  start mba(1) -->
  <div class="modal fade" id="exampleModal4" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Register Your Course</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- formstart -->
          <form action="/course_insert" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <input type="hidden" class="form-control" id="formGroupExampleInput" name="user_id" value="<%= id %>"
                placeholder="shareen">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput" class="form-label">Name</label>
              <input type="text" class="form-control" id="formGroupExampleInput" name="name" value="<%= n %>"
                placeholder="shareen">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Email</label>
              <input type="text" class="form-control" name="email" id="formGroupExampleInput2" value="<%= e %>">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Mobile Number</label>
              <input type="text" class="form-control" name="number" id="formGroupExampleInput2"
                placeholder="9446468855">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Address</label>
              <textarea type="text" class="form-control" name="address" id="formGroupExampleInput2"
                placeholder="gwalior"></textarea>
            </div>

            <!-- gender -->
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" value="male" id="flexRadioDefault1">
              <label class="form-check-label" for="flexRadioDefault1">Male</label>

            </div>
            <div class="form-check">
              <input class="form-check-input" value="female" type="radio" name="gender" id="flexRadioDefault2" checked>
              <label class="form-check-label" for="flexRadioDefault2">Female</label>
            </div><br>
            <!-- gender end -->

            <!--select start -->
            <label for="formGroupExampleInput2" class="form-label">College</label>
            <select class="form-select" aria-label="Default select example" name="college">
              <option selected>Select College</option>
              <option value="ITM">ITM</option>
              <option value="JIWAJI UNIVERSITY">JIWAJI UNIVERSITY</option>
              <option value="MITS">MITS</option>
              <option value="AMITY UNIVERSITY">AMITY UNIVERSITY</option>
              <option value="SHRIRAM COLLEGE">SHRIRAM COLLEGE</option>
              <option value="OTHER">OTHER</option>
            </select>

            <label for="formGroupExampleInput2" class="form-label">Course</label>
            <select class="form-select" aria-label="Default select example" name="course">
              <option selected>select Course</option>
              <option value="MBA">MBA</option>
            </select>

            <label for="formGroupExampleInput2" class="form-label">Branch</label>
            <select class="form-select" aria-label="Default select example" name="branch" type="branch">
              <option selected>select Branch</option>
              <option value="IT">IT</option>
              <option value="CS">CS</option>
              <option value="EE">EE</option>
              <option value="EC">EC</option>
              <option value="CIVIL">CIVIL</option>
              <option value="OTHER">OTHER</option>
            </select>
            <!-- select end -->
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" name="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
          <!-- formend -->
        </div>

      </div>
    </div>
  </div>
  <!-- modal form end -->

