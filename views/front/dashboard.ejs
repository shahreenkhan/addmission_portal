<%- include('../front/header.ejs') %>

  <!-- start container-fluid -->
  <div class="container-fluid back">
  </div>
  <!-- end container-fluid -->

  <!-- start container-fluid -->
  <div class="container-fluid a">
    <div class="row">
      <div class="col-md-12">
        <h1 style="text-align:center;">welcome <%= n %><br>
            Register Your Course</h1><br>
        <h6 style="text-align:center;">Course Registration means the official recording of a student's name to study a
          course or courses.</h6>
      </div>
    </div><br><br>
    <!-- start container -->
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6">
          <div class="card" style="width: 18rem;">
            <img src="https://www.besonline.in/blog/wp-content/uploads/2018/12/mba-admission.jpg" class="card-img-top"
              height="250px" alt="mba_img">
            <div class="card-body">
              <h5 class="card-title">MBA</h5>
              <p class="card-text">MBA is a post-graduation degree in management.</p>

              <% if(a) { %>
                <a href="/display" class="btn btn-info">Display</a>
                <% } else { %>
                  <!-- Button trigger modal -->
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal4">
                    REGISTER</button>
                  <% } %>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card" style="width: 18rem;">
            <img src="https://collegevidya.com/admin/mailimg/mtech%20for%20working%20professional.jpg"
