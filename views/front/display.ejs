<%- include('../front/header.ejs') %>

<div class="container-fluid">
    <div class="container"><br>
      <div class="row">
        <div class="col-md-12">
          <h3 class="alert alert-success text-center" style="background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);">DISPLAY</h3>
        </div>
      </div><br><br>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">NO.</th>
      <th scope="col">USERNAME</th>
      <th scope="col">STATUS</th>
      <th scope="col">COMMENT</th>
      <th scope="col">ACTION</th>
    </tr>
  </thead>
  <tbody>
      <!-- for each loop ka use kregenge ejs  -->
      <% d.forEach((item)=>{  %>  
        <!-- d ke data ko forEach item me stire kr dia -->
    <tr>
      <th scope="row"><%= item._id %></th>
      <td><%= item.name %></td>
      <td><%= item.status %></td>
      <td><%= item.comment %></td>
      <td>
        <a href="/courseview/<%= item._id %>" class="btn btn-info btn-sm">VIEW</a>
        <a href="/courseedit/<%= item._id %>" class="btn btn-primary btn-sm">EDIT</a>
        <a href="/course_delete/<%= item._id %>" class="btn btn-danger btn-sm">DELETE</a>
      </td>
    </tr>
    <%   }) %>
  </tbody>
</table>
<center>
  <a href="/dashboard" class="btn btn-warning" style="background: rgba(148,187,233,1);">Back to dashboard</a>
</center>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12" style="height: 14rem;">

    </div>
  </div>
</div>



